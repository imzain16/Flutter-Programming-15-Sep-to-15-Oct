// Sep 23 - Dart Programming 
// 1. Var vs Dynamic
// 2. Functions and their uses


void main(){
   //Topic:  Var vs Dynamic
// Var: This datatype detact the data. If the data is of integer then it work for integer datatype. It initialize during decaleration. 
// dynamic: This datatype is use for muliyple datatypes. it not initialize during decaleration thta's why it works for all the data type. 
// Limitation of dynamic: Not useful when we have to store a value and we doesn't it to change after but via dynamic it can be change after.  
  print('I am doing Dart Programming');
  
  String name = "Zain";
  
  var subject = "Maths";
  //subject = 4;
  subject = "English";
  
  print("Dynamic");
  dynamic section; // Dynamic Var
  
  section = "A"; // String
  print("String: $section");
  
  section = 12; // Integer
  print("int: $section");
  
  section = false; // bool
  print("bool: $section");
  
  section = 23.4; //  double
  print("double: $section");
  
  // Topic: Functions
  int num = 5;
  int n1 = 8;
  int n2 = 9;
  
  var myclass  = function_in_Dart_Programming(); // Creating Instance of Class 'myclass' <- Instance 
  myclass.print_num(num); // Function Calling
  var sum = myclass.print_sum(n1,n2); // Function Calling and storing data in sum
  print("Sum: $sum");
}

// Creating Class
class function_in_Dart_Programming{
  
  // Printing 5 numbers by function
 // Tip: Make function Reusable
  void print_num(int n){
  
    print("In class of function_in_Dart_Programming: Function print_num()");
  
    int count = 0;
    for(int i=0;i<n;i++){
      count++;
    }
    for(int j=1;j<=count;j++){
      print("num: $j");
      n--;
    }
    print("Total Count: $count");
  }

  // printing sum
  int print_sum(int num1,int num2){
    print("In class of function_in_Dart_Programming: Function print_sum()");
    var res = num1+num2;
    return res;
  }

}

